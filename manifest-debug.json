{
  "manifest_version": 3,
  "name": "Token Optimizer (Debug)",
  "version": "1.0.0",
  "description": "Debug version - Optimize and enhance your prompts for major LLM chat services",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "debug-content.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_title": "Token Optimizer (Debug)",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png"
    }
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}